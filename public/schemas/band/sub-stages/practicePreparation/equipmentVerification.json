{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Equipment Verification",
  "description": "Verify required equipment for practice session",
  "properties": {
    "requiredEquipment": {
      "type": "array",
      "title": "Required Equipment",
      "items": {
        "type": "object",
        "properties": {
          "instrumentType": {
            "type": "string",
            "title": "Instrument Type",
            "enum": ["Trumpet", "Trombone", "French Horn", "Tuba", "Flute", "Clarinet", "Saxophone", "Percussion", "String"]
          },
          "quantity": {
            "type": "integer",
            "title": "Quantity Needed",
            "minimum": 1
          },
          "verified": {
            "type": "boolean",
            "title": "Equipment Verified",
            "default": false
          }
        },
        "required": ["instrumentType", "quantity"]
      }
    },
    "additionalNotes": {
      "type": "string",
      "title": "Additional Equipment Notes"
    }
  }
}