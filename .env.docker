# Band Equipment Management System - Docker Environment Configuration

# ================================
# APPLICATION CONFIGURATION
# ================================
NEXT_PUBLIC_APP_NAME=Band Equipment Manager
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=production

# ================================
# API CONFIGURATION
# ================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_WS_BASE_URL=ws://localhost:8080

# ================================
# AUTHENTICATION
# ================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=band-nextauth-secret-2024-change-in-production

# ================================
# BACKEND CONFIGURATION
# ================================

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/banddb
SPRING_DATASOURCE_USERNAME=band
SPRING_DATASOURCE_PASSWORD=bandpass
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=false

# Redis Cache
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=bandredis
SPRING_REDIS_TIMEOUT=2000ms
SPRING_REDIS_DATABASE=0

# MinIO File Storage
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=bandminio
MINIO_SECRET_KEY=bandminio123
MINIO_BUCKET_SIGNATURES=band-signatures
MINIO_BUCKET_PHOTOS=band-photos
MINIO_BUCKET_DOCUMENTS=band-documents

# Security & JWT
APP_JWT_SECRET=band-equipment-management-jwt-secret-key-2024-change-in-production
APP_JWT_EXPIRATION=86400000
APP_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

# WebSocket
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

# Logging
LOGGING_LEVEL_COM_BAND=INFO
LOGGING_LEVEL_ROOT=WARN
LOGGING_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} - %msg%n

# Management & Monitoring
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_ENDPOINT_METRICS_ENABLED=true

# ================================
# BAND-SPECIFIC CONFIGURATION
# ================================

# School Information
BAND_SCHOOL_NAME=Demo High School
BAND_SCHOOL_ADDRESS=123 Music Lane, Demo City, ST 12345
BAND_DIRECTOR_NAME=Jane Smith
BAND_DIRECTOR_EMAIL=director@demoschool.edu

# Equipment Categories
BAND_EQUIPMENT_CATEGORIES=BRASS,WOODWIND,PERCUSSION,STRING,ELECTRONIC,ACCESSORY

# Band Sections
BAND_SECTIONS=Trumpet,Trombone,French Horn,Tuba,Clarinet,Saxophone,Flute,Oboe,Bassoon,Snare Drum,Bass Drum,Timpani,Cymbals,Violin,Viola,Cello,Bass

# Assignment Rules
EQUIPMENT_MAX_CHECKOUT_DAYS=30
EQUIPMENT_OVERDUE_NOTIFICATION_DAYS=3
EQUIPMENT_AUTO_RETURN_DAYS=60

# Maintenance Intervals (in days)
MAINTENANCE_ROUTINE_INTERVAL=90
MAINTENANCE_DEEP_INTERVAL=365
MAINTENANCE_INSPECTION_INTERVAL=30

# ================================
# FEATURE FLAGS
# ================================
FEATURE_QR_SCANNING=true
FEATURE_DIGITAL_SIGNATURES=true
FEATURE_VOICE_INPUT=true
FEATURE_PHOTO_CAPTURE=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_MAINTENANCE_TRACKING=true
FEATURE_EVENT_MANAGEMENT=true

# ================================
# DEVELOPMENT/TESTING
# ================================
MOCK_DATA_ENABLED=true
MOCK_QR_SCANNER=true
MOCK_VOICE_INPUT=true
DEBUG_WEBSOCKET=false
DEBUG_API_CALLS=false

# ================================
# PERFORMANCE TUNING
# ================================
SPRING_JPA_PROPERTIES_HIBERNATE_JDBC_BATCH_SIZE=25
SPRING_JPA_PROPERTIES_HIBERNATE_ORDER_INSERTS=true
SPRING_JPA_PROPERTIES_HIBERNATE_ORDER_UPDATES=true
SPRING_JPA_PROPERTIES_HIBERNATE_JDBC_BATCH_VERSIONED_DATA=true

# Connection Pool
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=30000
SPRING_DATASOURCE_HIKARI_IDLE_TIMEOUT=600000
SPRING_DATASOURCE_HIKARI_MAX_LIFETIME=1800000

# ================================
# SECURITY HEADERS
# ================================
SECURITY_HEADERS_FRAME_OPTIONS=DENY
SECURITY_HEADERS_CONTENT_TYPE_OPTIONS=nosniff
SECURITY_HEADERS_XSS_PROTECTION=1; mode=block
SECURITY_HEADERS_HSTS_MAX_AGE=31536000
SECURITY_HEADERS_CSP=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';

# ================================
# TIMEZONE & LOCALIZATION
# ================================
TZ=America/New_York
SPRING_JPA_PROPERTIES_HIBERNATE_JDBC_TIME_ZONE=America/New_York
LOCALE=en_US

# ================================
# BACKUP & MAINTENANCE
# ================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/app/backups