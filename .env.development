# Band Equipment Management System - Development Environment

# ================================
# APPLICATION CONFIGURATION
# ================================
NEXT_PUBLIC_APP_NAME="Band Equipment Manager (Dev)"
NEXT_PUBLIC_APP_VERSION=1.0.0-dev
NODE_ENV=development

# ================================
# API CONFIGURATION
# ================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_WS_BASE_URL=ws://localhost:8080

# ================================
# AUTHENTICATION
# ================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret-not-secure

# ================================
# BACKEND CONFIGURATION
# ================================

# Database (local PostgreSQL)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/banddb
SPRING_DATASOURCE_USERNAME=band
SPRING_DATASOURCE_PASSWORD=bandpass
SPRING_JPA_HIBERNATE_DDL_AUTO=create-drop
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# Redis Cache (local)
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=bandredis
SPRING_REDIS_TIMEOUT=2000ms

# MinIO File Storage (local)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=bandminio
MINIO_SECRET_KEY=bandminio123
MINIO_BUCKET_SIGNATURES=band-signatures
MINIO_BUCKET_PHOTOS=band-photos
MINIO_BUCKET_DOCUMENTS=band-documents

# Security & JWT
APP_JWT_SECRET=dev-jwt-secret-not-secure
APP_JWT_EXPIRATION=86400000
APP_CORS_ALLOWED_ORIGINS=http://localhost:3000

# WebSocket
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000

# Logging (verbose for development)
LOGGING_LEVEL_COM_BAND=DEBUG
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG
LOGGING_PATTERN_CONSOLE="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"

# Management & Monitoring
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=*
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_ENDPOINT_METRICS_ENABLED=true

# ================================
# DEVELOPMENT FEATURES
# ================================

# Mock Data
MOCK_DATA_ENABLED=true
MOCK_QR_SCANNER=true
MOCK_VOICE_INPUT=true
MOCK_USERS_ENABLED=true

# Debug Options
DEBUG_WEBSOCKET=true
DEBUG_API_CALLS=true
DEBUG_SQL_QUERIES=true

# Hot Reload
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true

# ================================
# TEST DATA CONFIGURATION
# ================================

# Equipment Test Data
TEST_EQUIPMENT_COUNT=50
TEST_ASSIGNMENTS_COUNT=25
TEST_EVENTS_COUNT=10
TEST_MAINTENANCE_RECORDS=15

# User Test Data  
TEST_STUDENTS_COUNT=30
TEST_DIRECTORS_COUNT=2
TEST_EQUIPMENT_MANAGERS_COUNT=2
TEST_SUPERVISORS_COUNT=1

# ================================
# PERFORMANCE (Relaxed for Dev)
# ================================
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=5
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=2
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=20000

# ================================
# BAND CONFIGURATION (Demo School)
# ================================
BAND_SCHOOL_NAME="Demo High School (Development)"
BAND_SCHOOL_ADDRESS="123 Development Lane, Test City, ST 12345"
BAND_DIRECTOR_NAME="Demo Director"
BAND_DIRECTOR_EMAIL=dev@localhost

# ================================
# TIMEZONE
# ================================
TZ=America/New_York